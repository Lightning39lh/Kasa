<androidx.appcompat.widget.LinearLayoutCompat android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".Learn">

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Vocabulario"
        android:layout_gravity="center"
        android:id="@+id/btVocabulario"
        android:background="@color/colorPrimary"
        android:textColor="@color/textColor"
        android:layout_margin="10dp"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Particulas"
        android:layout_gravity="center"
        android:id="@+id/btParticulas"
        android:background="@color/colorPrimary"
        android:textColor="@color/textColor"
        android:layout_margin="10dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="traductor (por palabras)"
        android:layout_gravity="center"
        android:id="@+id/btTraductor"
        android:background="@color/colorPrimary"
        android:textColor="@color/textColor"
        android:layout_margin="10dp"
        />


</androidx.appcompat.widget.LinearLayoutCompat>
